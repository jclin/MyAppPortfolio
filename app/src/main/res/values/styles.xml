<resources>
    <style name="projectButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/googleOrange</item>
        <item name="android:enabled">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="capstoneButtonStyle" parent="projectButtonStyle">
        <item name="android:background">@color/fieryRed</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/pukeBlue</item>
        <item name="android:colorBackgroundCacheHint">@color/pukeBlue</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />
</resources>
